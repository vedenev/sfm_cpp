{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "--std", "c++17",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${fileDirname}/utils/**.cpp",
                "${fileDirname}/utils/**.hpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I", "/usr/local/include/opencv4",
                "-L", "/usr/local/lib",
                "-lopencv_core",
                "-lopencv_videoio",
                "-lopencv_highgui",
                "-lopencv_imgcodecs"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}